<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:MinesweeperApp.ViewModels"
             xmlns:Models="clr-namespace:MinesweeperApp.Models"
             x:Class="MinesweeperApp.Views.GameView"
             x:DataType="ViewModel:GameViewModel"
             Title="GameView">
    <ContentView >
        <Grid HeightRequest="400" WidthRequest="400" x:Name="GameGrid" BindableLayout.ItemsSource="{Binding Board}">
            <BindableLayout.ItemTemplate Margin="0" Padding="0">
                <DataTemplate x:DataType="Models:Tile">
                    <Button Margin="0" Padding="0" HeightRequest="1" WidthRequest="1"
                            Grid.Column="{Binding x}"
                            Grid.Row="{Binding y}"
                            Text="{Binding Value}"
                            BorderWidth="0">
                        
                    </Button>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </Grid>
    </ContentView>
        

    
</ContentPage>