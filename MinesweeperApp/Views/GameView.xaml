<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:MinesweeperApp.ViewModels"
             xmlns:Models="clr-namespace:MinesweeperApp.Models"
             x:Class="MinesweeperApp.Views.GameView"
             x:DataType="ViewModel:GameViewModel"
             Title="GameView">
    <ContentView>
        <Grid x:Name="GameGrid" BindableLayout.ItemsSource="{Binding Board}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="Models:Tile">
                    <Button HeightRequest="5" WidthRequest="5" BorderWidth="0">
                        <Button.Text set="{Binding ToString()}"/>
                    </Button>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </Grid>
    </ContentView>
        

    
</ContentPage>